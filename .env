# .env
FLASK_APP=app.py
FLASK_ENV=development # Change to 'production' for deployment
FLASK_SECRET_KEY='your_very_strong_random_secret_key_here' # CHANGE THIS!

# --- MongoDB Configuration ---
MONGO_HOST='your_mongodb_ip_or_hostname' # e.g., localhost or 192.168.1.100 or clusterXX.mongodb.net
MONGO_PORT='27017'                       # Default MongoDB port
MONGO_USER='your_mongodb_username'       # Your MongoDB username
MONGO_PASS='your_mongodb_password'       # Your MongoDB password
MONGO_DB_NAME='restaurant_db'            # Desired database name
MONGO_AUTH_DB='admin'                    # The DB to authenticate against (often 'admin' or the DB itself)